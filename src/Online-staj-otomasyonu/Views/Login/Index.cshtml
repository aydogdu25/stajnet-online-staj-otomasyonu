@{
    ViewBag.Title = "Login";
}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                    <img src="/Content/assets/img/opalogo.png" alt="logo" width="100">
                </div>
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h1 class="fs-4 card-title mb-3">StajNet'e Hoşgeldiniz!</h1>
                        <p>Staj işlemleri için giriş yapınız.</p>
                        <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="ogrenci-tab" data-bs-toggle="tab" data-bs-target="#ogrenci" type="button" role="tab" aria-controls="ogrenci" aria-selected="true">Öğrenci</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="akademisyen-tab" data-bs-toggle="tab" data-bs-target="#akademisyen" type="button" role="tab" aria-controls="akademisyen" aria-selected="false">Akademisyen</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="ogrenci" role="tabpanel" aria-labelledby="ogrenci-tab">
                                <form method="POST" action="@Url.Action("OgrenciGiris", "Login")" class="needs-validation" novalidate="" autocomplete="off">
                                    <div class="mb-1">
                                        <label class="mb-2 text-muted" for="ogrenciNo">Öğrenci Numaranız:</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input id="ogrenciNo" type="text" class="form-control" name="ogrNo" placeholder="Numaranızı girin" autofocus required />
                                            <div class="invalid-feedback">
                                                Lütfen numaranızı giriniz!
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="mb-2 w-100">
                                            <label class="text-muted" for="ogrenciPassword">Şifre:</label>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </span>
                                            <input id="userSifre" type="password" class="form-control" name="ogrenciPassword" placeholder="Şifrenizi girin" required />
                                            <div class="invalid-feedback">
                                                Lütfen bir şifre giriniz!
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center mt-2">
                                        <button type="submit" class="btn btn-success w-100" style="background-color: #009e49;">
                                            Giriş
                                        </button>
                                    </div>
                                    <div class="d-flex align-items-center mt-2">
                                        <a href="@Url.Action("Forgot","Login")" class="btn btn-success w-100" style="background-color: #009e49;">
                                            Şifremi Unuttum
                                        </a>
                                    </div>
                                </form>
                            </div>


                            <div class="tab-pane fade" id="akademisyen" role="tabpanel" aria-labelledby="akademisyen-tab">
                                <form method="POST" action="@Url.Action("AkademisyenGiris", "Login")" class="needs-validation" novalidate="" autocomplete="off">
                                    <div class="mb-1">
                                        <label class="mb-2 text-muted" for="akademisyenEmail">E-posta:</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input id="akademisyenEmail" type="email" class="form-control" name="akademisyenEmail" placeholder="E-posta adresinizi girin" required autofocus />
                                            <div class="invalid-feedback">
                                                Lütfen bir e-posta giriniz!
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="mb-2 w-100">
                                            <label class="text-muted" for="akademisyenPassword">Şifre:</label>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </span>
                                            <input id="akademisyenPassword" type="password" class="form-control" name="akademisyenPassword" placeholder="Şifrenizi girin" required />
                                            <div class="invalid-feedback">
                                                Lütfen bir şifre giriniz!
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center mt-2">
                                        <button type="submit" class="btn btn-success w-100" style="background-color: #009e49;">
                                            Giriş
                                        </button>
                                    </div>
                                    <div class="d-flex align-items-center mt-2">
                                        <a href="@Url.Action("Forgot", "Login")" class="btn btn-success w-100" style="background-color: #009e49;">
                                            Şifremi Unuttum
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-5 text-muted">
                    Copyright &copy; 2024 &mdash; StajNet
                </div>
            </div>
        </div>
    </div>
</section>
@section Giris {
    @if (TempData["OgrenciError"] != null || TempData["AkademisyenError"] != null)
    {
        var errorMessage = TempData["OgrenciError"] ?? TempData["AkademisyenError"]; 
        <script type="text/javascript">
            alert('@errorMessage'); 
            window.location.href = '@Url.Action("", "Login")'; 
        </script>
    }
}




