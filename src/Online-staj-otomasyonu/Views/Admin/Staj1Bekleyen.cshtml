@{
    ViewBag.Title = "Staj1Bekleyen";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading text-center">
                        <h4>STAJ - I ONAY BEKLEYEN BAŞVURULAR</h4>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example2">
                                <thead>
                                    <tr>
                                        <th>Öğr. No</th>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th>Başvuru Dönemi</th>
                                        <th>Staj Başlangıç Tarihi</th>
                                        <th>Staj Bitiş Tarihi</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.OgrNo</td>
                                            <td>@item.Ad</td>
                                            <td>@item.Soyad</td>
                                            <td>@item.Donem</td>
                                            <td>@item.Baslangic</td>
                                            <td>@item.Bitis</td>
                                            <td class="text-center">
                                                <!-- Onayla butonunu içeren form -->
                                                <form action="@Url.Action("Staj1Bekleyen", "Admin")" method="post">
                                                    <input type="hidden" name="OgrNo" value="@item.OgrNo" />
                                                    <input type="hidden" name="Ad" value="@item.Ad" />
                                                    <input type="hidden" name="Soyad" value="@item.Soyad" />
                                                    <input type="hidden" name="Donem" value="@item.Donem" />
                                                    <input type="hidden" name="Program" value="Staj 1" />
                                                    <input type="hidden" name="Belge" value="@item.Belge" />
                                                    <input type="hidden" name="Baslangic" value="@item.Baslangic" />
                                                    <input type="hidden" name="Bitis" value="@item.Bitis" />


                                                    <button class="btn btn-success" type="submit">
                                                        <i class="fa fa-check"></i> Onayla
                                                    </button>
                                                </form>


                                                <button class="btn btn-danger" data-toggle="modal"
                                                        data-target="#reddetModal1">
                                                    <i class="fa fa-times"></i> Reddet
                                                </button>
                                                <form action="@Url.Action("StajRed", "Admin")" method="post">
                                                    <div class="modal fade" id="reddetModal1" tabindex="-1" role="dialog" aria-labelledby="reddetModalLabel1" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                    <h4 class="modal-title" id="reddetModalLabel1">Başvuruyu Reddet</h4>
                                                                </div>

                                                                <div class="modal-body">
                                                                    <input type="hidden" name="OgrNo" value="@item.OgrNo" />
                                                                    <input type="hidden" name="Ad" value="@item.Ad" />
                                                                    <input type="hidden" name="Soyad" value="@item.Soyad" />
                                                                    <input type="hidden" name="Donem" value="@item.Donem" />
                                                                    <input type="hidden" name="Program" value="Staj 1" />
                                                                    <input type="hidden" name="Belge" value="@item.Belge" />
                                                                    <input type="hidden" name="Baslangic" value="@item.Baslangic" />
                                                                    <input type="hidden" name="Bitis" value="@item.Bitis" />
                                                                    <div class="form-group">
                                                                        <label for="redNedeni">Reddetme Nedeni:</label>
                                                                        <textarea class="form-control" name="RedNedeni" id="redNedeni" rows="3" style="width: 100%; height: 100px; resize: none;" required></textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                                                    <button type="submit" class="btn btn-danger">Gönder</button>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                                <a href="@item.Belge" class="btn btn-primary" target="_blank">
                                                    <i class="fa fa-download"></i> İndir
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
