@{
    ViewBag.Title = "HomeIndex";
    var ogrenciAd = Session["OgrenciAd"] as string;
}

<style>
    .duyuru-tarih {
        font-size: 1.2em; /* Biraz büyütmek için */
    }
</style>

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4 class="header-line">
                    HOŞGELDİN, @(!string.IsNullOrEmpty(ogrenciAd) ? ogrenciAd : "MİSAFİR")
                </h4>
            </div>
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">DUYURULAR</div>
                    <div class="panel-body">
                        @foreach (var duyuru in Model)
                        {
                            <div class="well">
                                <h4 class="header-line fa-2x">@duyuru["StajAdi"].ToUpper()</h4>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Son Başvuru Tarihi:</h4>
                                        <p class="duyuru-tarih">@duyuru["SonBasvuru"]</p>
                                        <h4>Staj Dönemi Başlangıç Tarihi:</h4>
                                        <p class="duyuru-tarih">@duyuru["SdBaslangic"]</p>
                                        <h4>Staj Dönemi Bitiş Tarihi:</h4>
                                        <p class="duyuru-tarih">@duyuru["SdBitis"]</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h4>Son Defter Teslim Tarihi:</h4>
                                        <p class="duyuru-tarih">@duyuru["SdTeslim"]</p>
                                        <h4>Mülakat Başlangıç Tarihi:</h4>
                                        <p class="duyuru-tarih">@duyuru["MBaslangic"]</p>
                                        <h4>Mülakat Bitiş Tarihi:</h4>
                                        <p class="duyuru-tarih">@duyuru["MBitis"]</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
